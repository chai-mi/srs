{
    "log": {
        "disabled": false,
        "level": "debug"
    },
    "inbounds": [
        {
            "format": "geosite",
            "type": "remote",
            "src": "https://raw.githubusercontent.com/v2fly/domain-list-community/release/dlc.dat"
        },
        {
            "format": "dnsmasq",
            "type": "remote",
            "src": "https://raw.githubusercontent.com/felixonmars/dnsmasq-china-list/master/accelerated-domains.china.conf",
            "addtags": "dnsmasq-china-list"
        },
        {
            "format": "url",
            "type": "remote",
            "src": "https://raw.githubusercontent.com/ngosang/trackerslist/master/trackers_all.txt",
            "addtags": "public-tracker"
        },
        {
            "format": "url",
            "type": "remote",
            "src": "https://raw.githubusercontent.com/XIU2/TrackersListCollection/master/all.txt",
            "addtags": "public-tracker"
        },
        {
            "format": "hosts",
            "type": "remote",
            "src": "https://raw.githubusercontent.com/crazy-max/WindowsSpyBlocker/master/data/hosts/spy.txt",
            "addtags": "block-windows-spy"
        },
        {
            "format": "domain-list",
            "type": "local",
            "src": "./extra.json"
        }
    ],
    "rules": [
        {
            "category": "block",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "block-windows-spy": 1,
                "category-ads-all": 1,
                "exclude-block": -100,
                "ads": 1
            }
        },
        {
            "category": "direct",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "dnsmasq-china-list": 1,
                "cn": 1,
                "microsoft": 1,
                "apple": 1,
                "public-tracker": 1,
                "onedrive": -100,
                "google": -100,
                "hoyoverse": -100,
                "exclude-cn": -100,
                "bing": -100,
                "category-dev": -100,
                "block-windows-spy": -100,
                "category-ads-all": -100,
                "ads": -100
            }
        },
        {
            "category": "proxy",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "exclude-steam": 1000,
                "exclude-cn": 100,
                "geolocation-!cn": 1,
                "category-dev": 1,
                "ai": 1,
                "category-ai-chat-!cn": 1,
                "bing": 1,
                "onedrive": 10,
                "google": 10,
                "hoyoverse": 100,
                "cn": -10,
                "tld-cn": -100,
                "apple": -1,
                "microsoft": -1,
                "category-ads-all": -100,
                "steam": -100,
                "public-tracker": -100,
                "block-windows-spy": -100,
                "ads": -100,
                "dnsmasq-china-list": -100
            }
        },
        {
            "category": "google",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "google": 1,
                "ads": -100,
                "category-ads-all": -100
            }
        },
        {
            "category": "steam",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "steam": 1,
                "exclude-steam": -100
            }
        },
        {
            "category": "ai",
            "domain type": [
                "suffix",
                "full"
            ],
            "tag weight": {
                "category-ai-!cn": 1,
                "ai": 1,
                "openai": 1,
                "bing": 1,
                "reka": 1,
                "google-gemini": 1,
                "claude": 1,
                "ads": -100,
                "category-ads-all": -100
            }
        }
    ],
    "outbounds": [
        {
            "format": "domain-list",
            "path": "list"
        },
        {
            "format": "rule-set",
            "path": "public"
        }
    ]
}